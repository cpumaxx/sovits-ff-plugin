{
  "manifest_version": 2,
  "name": "Firefox SoVITS Screen Reader",
  "version": "1.0",
  "description": "A minimalistic Firefox extension to read selected text using an API.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "http://tts.yourdomain.com/api_v2/*", // Add the backend server URL
    "https://tts.yourdomain.com/api_v2/*"  // Add the backend server URL for HTTPS
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
