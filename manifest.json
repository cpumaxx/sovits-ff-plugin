{
  "manifest_version": 2,
  "name": "Firefox SoVITS Screen Reader",
  "version": "1.0",
  "description": "A minimalistic Firefox extension to read selected text using the SoVITS v2 API.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}

